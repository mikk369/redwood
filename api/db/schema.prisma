model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String
  posts Post[]
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  size      String
  type      String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
}

model Document {
  id        Int      @id @default(autoincrement())
  title     String
  size      String
  type      String
  createdAt DateTime @default(now())
  files     File[]
}

model File {
  id         Int      @id @default(autoincrement())
  title       String
  size       String
  type       String
  createdAt  DateTime @default(now())
  document   Document @relation(fields: [documentId], references: [id])
  documentId Int
}
